{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "rootDir": "../",
    "module": "commonjs",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}